{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.10-bookworm",

	"workspaceFolder": "/workspaces/python_env",
  "customizations": {
    "vscode": {
      "settings": {
        "python.analysis.extraPaths": [
          //"workspaces/python_env/app",
          //"workspaces/python_env/src"
        ],
        "python.terminal.activateEnvironment": true
      }
    }
  },
  "containerEnv": {
    "PYTHONPATH": "/workspaces/python_env"
  }
}
